{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SidGautamScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#template-strings"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numeric-literal"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#definition-keywords"
		},
		{
			"include": "#keyword-operators"
		},
		{
			"include": "#native-constants"
		},
		{
			"include": "#native-functions"
		},
		{
			"include": "#function-call"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#normal-operators"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.sgscript",
					"match": "#.*$"
				}
			]
		},
		"template-strings": {
			"name": "string.quoted.single.sgscript",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "string.interpolated.sgscript",
					"begin": "\\{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.template-expression.begin.sgscript"
						}
					},
					"end": "\\}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.template-expression.end.sgscript"
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#template-strings"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#numeric-literal"
						},
						{
							"include": "#keywords"
						},
						{
							"include": "#definition-keywords"
						},
						{
							"include": "#native-constants"
						},
						{
							"include": "#function-call"
						},
						{
							"include": "#variables"
						},
						{
							"include": "#operators"
						}
					]
				},
				{
					"name": "constant.character.escape.sgscript",
					"match": "\\\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.sgscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sgscript",
					"match": "\\\\."
				}
			]
		},
		"numeric-literal": {
			"patterns": [
				{
					"name": "constant.numeric.decimal.sgscript",
					"match": "\\b[+-]?\\d*\\.?\\d+\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sgscript",
					"match": "\\b(unless|orElse|though|pass|until|import|this)\\b"
				}
			]
		},
		"definition-keywords": {
			"patterns": [
				{
					"name": "storage.type.sgscript",
					"match": "\\b(func|var|final)\\b"
				}
			]
		},
		"keyword-operators": {
			"patterns": [
				{
					"name": "storage.type.other..sgscript",
					"match": "->"
				}
			]
		},
		"native-constants": {
			"patterns": [
				{
					"name": "constant.language.sgscript",
					"match": "\\b(NULL|true|false)\\b"
				}
			]
		},
		"native-functions": {
			"patterns": [
				{
					"name": "support.type.sgscript",
					"match": "\\b(print|exit|str|int|double|trim|errPrint|len|isEmpty|dataType|__addToPrototype)\\b"
				}
			]
		},
		"function-call": {
			"patterns": [
				{
					"name": "entity.name.function.call.sgscript",
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other.sgscript",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"normal-operators": {
			"patterns": [
				{
					"name": "keyword.operator.sgscript",
					"match": "[+\\-*/=<>!%!|&?]+"
				}
			]
		}
	},
	"scopeName": "source.sidg"
}